{% extends 'base.html.twig' %}
{% block title %}Logowanie{% endblock %}
{% block navbar %}{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style_login.css') }}">
{% endblock %}
{% block body %}
    <div class="uf-form-signin bg-white radius p-5">

        <p class="h2 text-black">Logowanie</p>
        <p class="h6 mb-5 text-secondary">Prosze się zalogowć żeby kontynuować</p>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Jesteś zalogowany jako <span class="fw-bold">{{ app.user.userIdentifier }}</span>, <a class="link" href="{{ path('app_logout') }}">WYLOGUJ</a>
                </div>
            {% endif %}

            <div class="form-group mb-2 text-secondary" >
                <div class="p-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi mb-1 me-2 bi-person" viewBox="0 0 16 16">
                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664z"/>
                    </svg>
                    <label for="inputEmail">Email</label>
                </div>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control shadow-sm rounded-pill p-2 ps-3" autocomplete="email" required autofocus>
            </div>

            <div class="form-group mb-5 text-secondary">
                <div class="p-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi mb-1 me-2 bi-lock" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2M5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1"/>
                    </svg>
                    <label for="exampleInputPassword1">Hasło</label>
                </div>
                <input type="password" name="password" id="inputPassword" class="form-control shadow-sm rounded-pill p-2 ps-3" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
            </div>


            <div class="d-grid">
                <button class="btn btn-success btn-lg rounded-pill" type="submit">
                    Zaloguj
                </button>
            </div>
        </form>

    </div>

{% endblock %}